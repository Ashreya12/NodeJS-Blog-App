<% include ../partials/header %>

<div class="container">
	<div>
		<h1 style="text-align: center; margin-top: 20px;">Edit Comment</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form class="form-control" action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">

				<div class="form-group">
					<textarea rows="6" class="form-control" name="comment[text]"><%= comment.text %></textarea>
				</div>
				<div class="form-group">	
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../partials/footer %>