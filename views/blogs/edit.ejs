<% include ../partials/header %>

<div class="container">
	<div>
		<h1 style="text-align: center; margin-top: 20px"><%= blog.title %></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
				</div>
				<div class="form-group">
					<textarea rows="6" class="form-control" name="blog[body]"><%= blog.body %></textarea>
				</div>
				<div class="form-group">	
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../partials/footer %>